<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperadorActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="12"
        >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="12"
            >
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:weightSum="12"

                >

                <TextView
                    android:id="@+id/TEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DESEA ADELANTAR LO PRODUCCIDO ?"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    />

            </LinearLayout>


            <EditText
                android:id="@+id/digicantidad"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:gravity="center"
                android:hint="CANTIDAD DE UNIDADES PRODUCCIDAS"
                android:inputType="number" />

            <Button
                android:id="@+id/CONFIRMARADE"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="CONFIRMAR" />

            <TextView
                android:id="@+id/Cantidadops"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:textColor="@color/colorAzulCRO"
                android:textSize="28sp"
                 android:text="cantidad restante : "/>


        </LinearLayout>

      </LinearLayout>
</RelativeLayout>