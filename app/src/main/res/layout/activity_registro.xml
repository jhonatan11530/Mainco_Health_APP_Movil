<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity"

    >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4.5"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="REGISTRO DE USUARIO"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="15sp"
            android:text="DEBE REGISTRARSE PARA PODER ENTRAR AL SISTEMA"
            android:layout_marginVertical="5dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <EditText
                android:id="@+id/nombre"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginVertical="3dp"
                android:background="@drawable/lineas_login"
                android:gravity="center"
                android:hint="INGRESE SU NOMBRE"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/apellido"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginVertical="3dp"
                android:background="@drawable/lineas_login"
                android:gravity="center"
                android:hint="INGRESE SU APELLIDO"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/cedula"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginVertical="3dp"
                android:background="@drawable/lineas_login"
                android:gravity="center"
                android:hint="USUARIO"
                android:inputType="number" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginVertical="6dp"
                android:background="@drawable/lineas_login"
                android:gravity="center"
                android:hint="CONTRASEÃ‘A"
                android:inputType="textPassword" />

           s

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:weightSum="10"
            android:gravity="center">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:background="#fafafa"
                android:gravity="center"
                android:textColor="#000"
                android:text="SELECIONE EL CARGO ASIGNADO"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/rol"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000"
                android:text="OPERADOR"
                android:textSize="20dp"
                android:layout_weight="1.3"
                android:layout_marginVertical="25dp"
                />
            <Button
                android:id="@+id/registro"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:text="REGISTRAR"
                android:textColor="#000"
                android:background="@drawable/btn_redondo"
                android:onClick="registrar"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>