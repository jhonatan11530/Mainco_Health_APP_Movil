<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".options"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="6">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.1"
            android:orientation="vertical">



            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:gravity="center"
                android:background="#DADDE0"
                android:textColor="#000000"
                android:text="TUTORIALES"
                android:textSize="20sp"
                />



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EN ESTA OPCION PODRAS APRENDER SOBRE EL USO DE LA APLICACION"
                    android:textColor="#000000"

                    android:textSize="18sp"
                    android:layout_marginVertical="6dp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="MAS INFORMACION"
                    android:onClick="masinfo"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#DADDE0"
                android:text="INFORMACION SOBRE LA APP"
                android:textSize="20sp"
                />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE DE LA APP : MAINCO HEALTH APP"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginVertical="6dp"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VERSION DE LA APP : 1.2"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginVertical="6dp"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TIPO DE APLICACION : NATIVA"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginVertical="6dp"/>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="COMPATIBILIDAD CON OTROS S.O : NO"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginVertical="6dp"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="INFORMACION DE ESCLUSIVIDAD"
                    android:onClick="info"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#DADDE0"
                android:text="SOPORTE Y CONTACTO"
                android:textSize="20sp"

                />


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EN ESTA OPCION PODRAS CONTACTAR CON EL DESARROLLADOR DE LA APP"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginVertical="6dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="OBTENER SOPORTE"
                    android:onClick="support"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>






    </LinearLayout>
</ScrollView>
</RelativeLayout>