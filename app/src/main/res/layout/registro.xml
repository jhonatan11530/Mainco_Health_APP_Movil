<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/header"
        android:orientation="vertical"
        android:weightSum="4.5"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/REGISTRO_DE_USUARIO_REGISTRO"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:text="@string/TEXTO_REGISTRO"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColorHint="#fff"
                app:hintTextAppearance="@color/white"
                app:startIconDrawable="@drawable/identificacion">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nombre"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/INGRESE_SU_NOMBRE_REGISTRO"
                    android:background="@drawable/lineas_login"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColorHint="#fff"
                app:hintTextAppearance="@color/white"
                app:startIconDrawable="@drawable/identificacion">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/apellido"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/INGRESE_SU_APELLIDO_REGISTRO"
                    android:background="@drawable/lineas_login"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColorHint="#fff"
                app:hintTextAppearance="@color/white"
                app:startIconDrawable="@drawable/cuenta">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cedula"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/USUARIO_REGISTRO"
                    android:background="@drawable/lineas_login"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:textColorHint="#fff"
                app:hintTextAppearance="@color/white"
                app:passwordToggleEnabled="true"
                app:startIconDrawable="@drawable/candado">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pass"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:hint="@string/CONTRASEÃ‘A_REGISTRO"
                    android:background="@drawable/lineas_login"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:gravity="center"
                android:text="@string/TEXTO_REGISTRO2"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/rol"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:text="@string/OPERADOR_REGISTRO"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/registro"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:background="@drawable/btn_redondo"
                android:onClick="registro"
                android:text="@string/REGISTRAR_REGISTRO"
                android:textColor="@color/white"
                tools:ignore="UsingOnClickInXml" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>